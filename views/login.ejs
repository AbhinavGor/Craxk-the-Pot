<%- include('./partials/defaultNav') %>

<div id="login" class="container-fluid form-group">
  <div class="row mt-6">
    <div class="col-md-6 m-auto">
      <div>
        <h1 class="mb-4 mt-10">
          <i class="fas fa-sign-in-alt"></i> Login
        </h1>        
        <%- include('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control cust"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div><br />
          <input type="checkbox" onclick="Toggle()"> 
          <b>Show Password</b>
          <button type="submit" class="btn btn-primary btn-block">
            Login
          </button>
        </form>
        <p class="lead mt-4">Don't Have An Account? <a href="/signup">Register</a></p>
        <!-- <p class="lead mt-4">Forgot Password? Click <a href="/recover">here</a> to reset.</p> -->
      </div>
    </div>
  </div>
</div>

<script> 
  // Change the type of input to password or text 
      function Toggle() { 
          var temp = document.getElementById("password"); 
          if (temp.type === "password") { 
              temp.type = "text"; 
          } 
          else { 
              temp.type = "password"; 
          } 
      } 
</script> 
